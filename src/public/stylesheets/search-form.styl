.search-form
  text-align center
  font-size 16px
  padding 40px 0 20px 130px
  margin auto
  max-width 1000px
  transition padding .4s
  text-align right
  clearfix()
  @media (max-width: 1000px)
    padding 30px 10px 20px 10px
  .logo
    text-align center
    size 100px 80px
    absolute top 20px left 50%
    line-height 0
    margin 0 0 0 -500px
    transition all .4s
    transform rotate(360deg * 2)
    text-decoration none
    @media (max-width: 1000px)
      top 10px
      left 50px
      margin 0 0 0 -50px
    .dot
      size 30px
      display block
      border-radius 50%
      display inline-block
      relative top 20px
    .madoka
      top 0
    .homura
      left 5px
    .mami
      right 5px
  .query, .scope, .submit
    border none
    outline none
    padding 10px
    box-shadow 0 0 2px #ddd
    vertical-align middle
    transition box-shadow .2s, width .4s, margin .4s
    max-width 100%
    display inline-block
    height 40px
    @media (max-width: 1000px)
      width 100%
      margin 5px 0 0 0
    &:focus
      box-shadow 0 0 4px #ccc
  .query
    width 530px
    @media (max-width: 1000px)
      width calc(80% - 90px)
      margin 0 0 0 90px
  .scope
    width 200px
    margin 0 0 0 20px
    @media (max-width: 1000px)
      background transparent
      box-shadow none
      color #bbb
      font-size 12px
      absolute right 0
      text-align right
      display none
      &:focus
        box-shadow none
      optgroup
        text-align left
  .submit
    font-family 'Helvetica Neue', Helvetica, Roboto, Arial, 'Hiragino Sans GB', 'Heiti SC', 'Source Han Sans CN', 'WenQuanYi Micro Hei', sans-serif
    width 100px
    font-size 12px
    background #2B7BB9
    color #fff
    margin 0 0 0 20px
    outline none
    border 1px solid transparent
    transition all .1s
    &:active
      border 1px solid lighten(blue, 60%)
      transform scale(.98)
    @media (max-width: 1000px)
      width 18%
      margin 0 0 0 2%

  &.sleeping
    padding 260px 0 0 0
    .logo
      top 140px
      margin 0 0 0 -50px
      transform rotate(0)
    .query
      width 660px

    @media (max-width: 1000px)
      padding 130px 10px 0 10px
      .logo
        top 20px
        left 50%
        display block
      .query
        width 80%
        margin 0
      .scope
        display block

.push
  margin 0 0 20px 0
